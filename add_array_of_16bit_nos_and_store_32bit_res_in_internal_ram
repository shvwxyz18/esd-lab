	AREA ARR16, CODE, READONLY
	ENTRY
	EXPORT __main

__main
	LDR R0, =ARRAY
	MOV R1, #4
	MOV R2, #0
	
LOOP
	LDR R3, [R0], #4
	ADD R2, R2, R3
	SUBS R1, #1
	CMP R1, #0
	BNE LOOP
	LDR R5, =RESULT
	STR R2, [R5]
	
STOP B STOP
ARRAY DCD 0X0001, 0X0002, 0X0003, 0X0004
	AREA RES, DATA, READWRITE
RESULT DCD 0X00

;EXPECTED OUTPUT R2 - 0X0000000A
